<main class="signup-page">
  <form class="signup-form" action="">
    <span class="signup-form__title">Регистрация</span>
    {{{ FormInput title="Почта" name="email" ref="email" validateFn=validateFns.email }}}
    {{{ FormInput title="Логин" name="login" ref="login" validateFn=validateFns.login }}}
    {{{ FormInput title="Имя" name="first_name" ref="first_name" validateFn=validateFns.name }}}
    {{{ FormInput title="Фамилия" name="second_name" ref="second_name" validateFn=validateFns.name }}}
    {{{ FormInput title="Телефон" type="tel" name="phone" ref="phone" validateFn=validateFns.phone }}}
    {{{ FormInput title="Пароль" type="text" name="password" ref="password" validateFn=validateFns.password }}}
    {{{ FormInput title="Пароль (еще раз)" type="text" name="password2" ref="password2" validateFn=validateFns.password }}}
    <br>
    {{{ FormButton title="Зарегистрироваться" onClick=signUpHandler}}}
    {{{ FormButton title="Войти" transparent=true onClick=lognHandler}}}
  </form>
</main>
