<div class="login-page">
  <form class="login-form" action="">
    <span class="login-form__title">Вход</span>
    {{{ FormInput title="Логин" value="IVAN" name="login" ref="login" validateFn=validateFns.login }}}
    {{{ FormInput title="Пароль" value="123456" name="password" ref="password" type="password" validateFn=validateFns.password }}}
    <br>
    {{{ FormButton title="Авторизоваться" linkTo="MainLayout" onClick=onLogin }}}
    {{{ FormButton title="Нет аккаунта?" transparent=true }}}
  </form>
</div>
