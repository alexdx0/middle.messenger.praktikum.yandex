<div class="messages-list">
  <header class="messages-list__header">
    <div class="contact-info">
      <div class="contact-info__avatar">
        <div class="icon-no-photo"></div>
      </div>
      <div class="contact-info__name">
        {{title}}
      </div>
    </div>
    <div class="more-button">
      {{{ ThreeDotsButton onClick=onMenuClick }}}
    </div>
  </header>
  <main class="messages-list__content">
    {{#each messages}}
    {{{ MessageCard whose="his" text=this.content }}}
    {{/each}}
  </main>
  <div>
  </div>
  <footer class="messages-list__footer">
    {{{ AttachButton onClick=onAttachClick}}}
    {{{ MessageInput }}}
    {{{ ArrowButton direction="right" }}}
  </footer>
  {{{ ChatContextPopup ref="contextPopup" }}}
  {{{ AttachPopup ref="attachPopup" }}}
</div>
